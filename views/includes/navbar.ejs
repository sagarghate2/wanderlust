
  <style>
nav{
  background-color: white;
}
.search-bar{
    width: 15rem;
  }
  .btn-search:hover{
    background-color: #fe424d;
    color: white;
  }
  .btn-search{
    background-color: #fe424d;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    border-radius: 5rem;
    padding: 0.2rem 1rem 0.2rem 1rem;
  }
  .btn-search i {
    margin-right: 0.5rem;
  }
  .search-inp{
    border-radius: 5rem;
    width: 15.5rem;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }
  .navbar-expanded{
    background-color: #f8f9fa;
    transition: background-color 0.3s erase;
  }
  .navbar {
  background-color: white;
  transition: background-color 0.3s ease;
}

.navbar.navbar-expanded {
  background-color: #f8f9fa; 
}

.navbar.navbar-expanded .nav-bar-search input,
.navbar.navbar-expanded .nav-bar-search button {
  background-color: #e9ecef;
  transition: background-color 0.3s ease;
}


.navbar.navbar-expanded .nav-link {
  color: #fe424d; 
  background-color: #f8f9fa; 
  padding: 0.5rem;
  border-radius: 5px;
  transition: background-color 0.3s ease, color 0.3s ease;
}

  </style>
  <nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top" id="mainNavbar">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listings"> <i class="fa-regular fa-compass"></i> </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation" id="navbarToggler">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>
        
          <div class="nav-bar-search ms-auto">
            <form class="d-flex" role="search"  action="/listings" method="get">
              <input class="form-control me-2 search-inp" type="search" placeholder="Search destination" aria-label="Search" name="category">
              <button class="btn btn-search" type="submit"> <i class="fa-solid fa-magnifying-glass"></i> Search</button>
            </form>
          </div>
       
        <div class="navbar-nav ms-auto">
          <a class="nav-link" href="/listings/new">Wanderlust your home</a>
           <% if(!currUser) { %>
          <a class="nav-link "  href="/signup"><b>Sign up</b></a>
          <a class="nav-link" href="/login"><b>Log in</b></a>
           <% } if(currUser) { %>
          <a class="nav-link" href="/logout"><b>Log out</b></a>
             <% } %>
      </div>
    </div>
  </nav>


  <script>

  document.addEventListener("DOMContentLoaded", () => {
  const navbar = document.getElementById("mainNavbar");
  const toggler = document.getElementById("navbarToggler");
  toggler.addEventListener("click", () => {
    navbar.classList.toggle("navbar-expanded");
  });
});
       
  </script>